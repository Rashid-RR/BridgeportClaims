<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <add name="BridgeportClaimsConnectionString"
         providerName="System.Data.SqlClient"
         connectionString="Server=.\DB1;Database=BridgeportClaims;Trusted_Connection=True;MultipleActiveResultSets=True;Encrypt=True;TrustServerCertificate=True;" />
  </connectionStrings>
  <appSettings>
    <!-- This is the flag that decides whether or not to log all of the app's activity to the database. -->
    <add key="ApplicationIsInDebugMode" value="true" />
    <!--************************************************************************************************-->
    <!--<add key="ImagesLocation" value="Y:\Scans\Correspondence"/>-->
    <add key="ImagesLocation" value="C:\Development\Clients\Images" />
    <add key="InvoicesLocation" value="C:\Development\Clients\Invoices" />
    <add key="ChecksLocation" value="C:\Development\Clients\Checks" />
    <!--<add key="InvoicesLocation" value="Y:\Common\Invoicing"/>-->
    <add key="PerformInitialDirectoryTraversal" value="true" />
    <add key="ImagesRootDomainName" value="https://images.bridgeportclaims.com" />
    <add key="InvoicesRootDomainName" value="https://invoices.bridgeportclaims.com" />
    <add key="ChecksRootDomainName" value="https://images.bridgeportclaims.com/Checks" />
    <add key="ApiHostName" value="https://bridgeportclaims.com" />
    <add key="AuthenticationApiUrl" value="/oauth/token" />
    <add key="SignalRAddMethodApiUrl" value="/api/document/add" />
    <add key="SignalRModifyMethodApiUrl" value="/api/document/edit" />
    <add key="SignalRDeleteMethodApiUrl" value="/api/document/delete/?documentId=" />
  </appSettings>
  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Numerics.Vectors" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.1.4.0" newVersion="4.1.4.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Buffers" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.3.0" newVersion="4.0.3.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>