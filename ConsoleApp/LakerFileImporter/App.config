<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <connectionStrings>
    <add name="BridgeportClaimsConnectionString"
         providerName="System.Data.SqlClient"
         connectionString="Server=.\DB1;Database=BridgeportClaims;Integrated Security=True;MultipleActiveResultSets=True;" />
  </connectionStrings>
  <appSettings>
    <add key="ApplicationIsInDebugMode" value="true" />
    <add key="LakerFilePath" value="D:\TFS\JGPortal\LakerFilesBackup"/>
    <add key="LakerFileTopNumber" value="10"/>
    <!--<add key="FileUploadApiHostName" value="https://bridgeportclaims-bridgeportclaimsstaging.azurewebsites.net"/>-->
    <add key="FileUploadApiHostName" value="https://localhost:44342"/>
    <add key="FileUploadApiUrl" value="/api/fileupload/upload"/>
    <add key="AuthenticationApiUrl" value="/oauth/token"/>
    <add key="AuthenticationUserName" value="jordangurney@gmail.com"/>
    <add key="AuthenticationPassword" value="Password1"/>
    <add key="LakerFileProcessingApiUrl" value="/api/laker/process"/>
  </appSettings>
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
  </startup>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="db" xsi:type="Database" connectionStringName="BridgeportClaimsConnectionString" commandType="StoredProcedure" commandText="[dbo].[uspNLogInsert]">
        <parameter name="@machineName" layout="${machinename}" />
        <parameter name="@siteName" layout="${iis-site-name}" />
        <!--<parameter name="@logged" layout="${date:universalTime=true:format=M/d/yyyy HH\:mm\:ss.fff}" />-->
        <parameter name="@logged" layout="${date}" />
        <parameter name="@level" layout="${level}" />
        <parameter name="@username" layout="${aspnet-user-identity}" />
        <parameter name="@message" layout="${message}" />
        <parameter name="@logger" layout="${logger}" />
        <parameter name="@properties" layout="${all-event-properties:separator=|}" />
        <parameter name="@serverName" layout="${aspnet-request:serverVariable=SERVER_NAME}" />
        <parameter name="@port" layout="${aspnet-request:serverVariable=SERVER_PORT}" />
        <parameter name="@url" layout="${aspnet-request:serverVariable=HTTP_URL}" />
        <parameter name="@https" layout="${when:inner=1:when='${aspnet-request:serverVariable=HTTPS}' == 'on'}${when:inner=0:when='${aspnet-request:serverVariable=HTTPS}' != 'on'}" />
        <parameter name="@serverAddress" layout="${aspnet-request:serverVariable=LOCAL_ADDR}" />
        <parameter name="@remoteAddress" layout="${aspnet-request:serverVariable=REMOTE_ADDR}:${aspnet-request:serverVariable=REMOTE_PORT}" />
        <parameter name="@callSite" layout="${callsite}" />
        <parameter name="@exception" layout="${exception:tostring}" />
      </target>
    </targets>
    <rules>
      <logger name="*" minLevel="Debug" maxLevel="Fatal" writeTo="db" enabled="true" final="true" />
    </rules>
  </nlog>
</configuration>